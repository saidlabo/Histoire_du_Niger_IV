<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/white">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image de la région -->
            <ImageView
                android:id="@+id/imageRegionDetail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_region_default"
                android:contentDescription="Image de la région"
                android:layout_marginBottom="16dp"
                android:background="@android:color/darker_gray"/>

            <!-- Carte d'information -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <!-- Nom de la région -->
                    <TextView
                        android:id="@+id/textNomDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom de la région"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:layout_marginBottom="8dp"/>

                    <!-- Capitale -->
                    <TextView
                        android:id="@+id/textCapitaleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capitale : "
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="16dp"/>

                    <!-- Description -->
                    <TextView
                        android:id="@+id/textDescriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description détaillée..."
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp"/>

                    <!-- Séparateur -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="8dp"/>

                    <!-- Statistiques -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistiques"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <!-- Superficie -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textSuperficieDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="667,799 km²"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FF5722"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Superficie"
                                android:textSize="12sp"
                                android:textColor="#757575"/>
                        </LinearLayout>

                        <!-- Population -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textPopulationDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500,000 hab."
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Population"
                                android:textSize="12sp"
                                android:textColor="#757575"/>
                        </LinearLayout>

                        <!-- Départements -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textDepartementsDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 départements"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#2196F3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Départements"
                                android:textSize="12sp"
                                android:textColor="#757575"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Bouton pour voir plus -->
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Voir sur la carte"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp"
                        android:background="#008000"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_map"
                        android:drawablePadding="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>