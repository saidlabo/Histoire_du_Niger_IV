<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRegion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageRegion"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                android:contentDescription="Image de la région"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agadez"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"/>

                <TextView
                    android:id="@+id/textCapitale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capitale : Agadez"
                    android:textSize="14sp"
                    android:textColor="#757575"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textIndicateur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶"
                android:textSize="16sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="La plus grande région du Niger..."
            android:textSize="14sp"
            android:textColor="#424242"
            android:maxLines="2"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textSuperficie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="667,799 km²"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:gravity="center"
                android:drawableTop="@drawable/ic_arean"
                android:drawablePadding="4dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E0E0E0"/>

            <TextView
                android:id="@+id/textPopulation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="500,000 hab."
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:gravity="center"
                android:drawableTop="@drawable/ic_people"
                android:drawablePadding="4dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E0E0E0"/>

            <TextView
                android:id="@+id/textDepartements"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 départements"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:gravity="center"
                android:drawableTop="@drawable/ic_departement"
                android:drawablePadding="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
